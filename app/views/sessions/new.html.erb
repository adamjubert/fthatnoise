<form class="form-horizontal" action="<%= session_url %>" method="post">
  <fieldset>
    <%= form_auth_token %>
    <legend>Sign In</legend>

    <div class="form-group">
      <label for="user_username" class="col-lg-2 control-label">Username</label>
      <div class="col-lg-10">
        <input id="user_username" type="text" name="user[username]" class="form-control" placeholder="enter your username">
      </div>
    </div>

    <div class="form-group">
      <label for="user_password" class="col-lg-2 control-label">Password</label>
      <div class="col-lg-10">
        <input id="user_password" type="password" name="user[password]" class="form-control" placeholder="enter your password">
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="submit" class="btn btn-primary">Sign In</button>
      </div>
    </div>
  </fieldset>
</form>
