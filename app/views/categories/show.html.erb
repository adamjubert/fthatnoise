<h1><%= @category.name %></h1>

<h3><%= link_to "Back to All Categories", categories_url %></h3>

<ul>
  <% @category.suggestions.each do |suggestion| %>
    <li><%= link_to suggestion.title, suggestion_url(suggestion) %></li>
  <% end %>

  <% @category.events.each do |event| %>
    <li><%= link_to event.title, event_url(event) %></li>
  <% end %>
</ul>
