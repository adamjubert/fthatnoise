<% if action_type == :new %>
  <% action_url = idea.is_a?(Suggestion) ? suggestion_comments_url(idea) : event_comments_url(idea) %>
<% else %>
  <% action_url = comment_url(comment) %>
<% end %>

<% message = action_type == :new ? "Add Comment" : "Edit Comment" %>

<form action="<%= action_url %>" method="post">
  <fieldset>
    <%= form_auth_token %>

    <% if action_type == :edit %>
      <input type="hidden" name="_method" value="patch">
    <% end %>

    <label for="comment_body" class="col-lg-2 control-label">Comment</label>
    <textarea class="form-control" name="comment[body]" rows="3" id="comment_body" placeholder="Add comment here"><%= comment.body %></textarea>

    <button type="submit" class="btn btn-info"><%= message %></button>
  </fieldset>
</form>
