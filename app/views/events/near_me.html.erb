<h1>Events Near Me</h1>

<% if logged_in? %>
  <h4><%= link_to "Create New Action", new_suggestion_url %></h4>
  <h4><%= link_to "Create New Event", new_event_url %></h4>
<% end %>

<% if @ideas.empty? %>
  <p>No events are created near you. Why don't you <%= link_to "create one", new_event_url %>? Please make sure to <%= link_to "set your location", edit_user_url(current_user) %>.</p>
<% else %>
  <%= render partial: "layouts/short_idea", locals: { ideas: @ideas, idea_type: :event } %>
  <%= will_paginate @ideas %>
<% end %>
