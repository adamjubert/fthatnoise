<!DOCTYPE html>
<html>
  <head>
    <title>F*** That Noise</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render partial: "layouts/nav" %>

    <% if flash.now[:errors] %>
      <% flash.now[:errors].each do |error| %>
        <p><%= error %></p>
      <% end %>
    <% end %>

    <% if flash.now[:notice] %>
      <% flash.now[:notice].each do |notice| %>
        <p><%= notice %></p>
      <% end %>
    <% end %>

    <% if logged_in? %>
      <p>Welcome, <%= current_user.username %> <%= link_to "Profile", user_url(current_user) %></p>
      <%= button_to "Logout", session_url, method: :delete %>
      <% else %>
        <%= link_to "Create Account", new_user_url %>
        <%= link_to "Sign In", new_session_url %>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
