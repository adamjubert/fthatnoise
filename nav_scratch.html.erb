<%= render partial: "shared/nav" %>

<% if flash.now[:errors] %>
  <% flash.now[:errors].each do |error| %>
    <div class="flash error-flash">
      <button type="button"><i class="fa fa-times-circle" aria-hidden="true"></i></button>
      <strong><%= error %></strong>
    </div>
  <% end %>
<% end %>

<% if flash.now[:notice] %>
  <% flash.now[:notice].each do |notice| %>
    <div class="flash notice-flash">
      <button type="button"><i class="fa fa-times-circle" aria-hidden="true"></i></button>
      <strong><%= notice %></strong>
    </div>
  <% end %>
<% end %>

